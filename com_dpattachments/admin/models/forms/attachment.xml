<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
		       description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true"/>

		<field name="title" type="text" label="JGLOBAL_TITLE"
		       description="JFIELD_TITLE_DESC" class="input-xlarge" size="30"
		       required="true" labelclass="control-label"/>

		<field name="path" type="text" label="COM_DPATTACHMENTS_FIELD_PATH_LABEL"
		       description="COM_DPATTACHMENTS_FIELD_PATH_DESC" class="input-xlarge"
		       size="30" required="true" labelclass="control-label"/>

		<field name="item_id" type="text"
		       label="COM_DPATTACHMENTS_FIELD_ITEM_ID_LABEL" readonly="true"
		       description="COM_DPATTACHMENTS_FIELD_ITEM_ID_DESC" class="input-xlarge"
		       size="30" required="true" labelclass="control-label"/>

		<field name="context" type="text"
		       label="COM_DPATTACHMENTS_FIELD_CONTEXT_LABEL" readonly="true"
		       description="COM_DPATTACHMENTS_FIELD_CONTEXT_DESC" class="input-xlarge"
		       size="30" required="true" labelclass="control-label"/>

		<field name="path" type="text" label="COM_DPATTACHMENTS_FIELD_PATH_LABEL"
		       description="COM_DPATTACHMENTS_FIELD_PATH_DESC" class="input-xlarge"
		       size="30" required="true" labelclass="control-label"/>

		<field name="alias" type="text" label="JFIELD_ALIAS_LABEL"
		       description="JFIELD_ALIAS_DESC" class="inputbox" size="45"
		       labelclass="control-label"/>

		<field name="state" type="list" label="JSTATUS"
		       description="COM_DPATTACHMENTS_FIELD_STATE_DESC" class="inputbox"
		       size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field name="created" type="calendar"
		       label="COM_DPATTACHMENTS_FIELD_CREATED_LABEL" description="COM_DPATTACHMENTS_FIELD_CREATED_DESC"
		       class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S" filter="user_utc"
		       labelclass="control-label"/>

		<field name="created_by" type="user"
		       label="COM_DPATTACHMENTS_FIELD_CREATED_BY_LABEL" description="COM_DPATTACHMENTS_FIELD_CREATED_BY_DESC"
		       labelclass="control-label"/>

		<field name="created_by_alias" type="text"
		       label="COM_DPATTACHMENTS_FIELD_CREATED_BY_ALIAS_LABEL" description="COM_DPATTACHMENTS_FIELD_CREATED_BY_ALIAS_DESC"
		       class="inputbox" size="20" labelclass="control-label"/>

		<field name="modified" type="calendar" class="readonly"
		       label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_DPATTACHMENTS_FIELD_MODIFIED_DESC"
		       size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc"
		       labelclass="control-label"/>

		<field name="modified_by" type="user" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
		       class="readonly" readonly="true" filter="unset" labelclass="control-label"/>

		<field name="checked_out" type="hidden" filter="unset"/>

		<field name="checked_out_time" type="hidden" filter="unset"/>

		<field name="publish_up" type="calendar"
		       label="COM_DPATTACHMENTS_FIELD_PUBLISH_UP_LABEL" description="COM_DPATTACHMENTS_FIELD_PUBLISH_UP_DESC"
		       class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22" filter="user_utc"
		       labelclass="control-label"/>

		<field name="publish_down" type="calendar"
		       label="COM_DPATTACHMENTS_FIELD_PUBLISH_DOWN_LABEL" description="COM_DPATTACHMENTS_FIELD_PUBLISH_DOWN_DESC"
		       class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22" filter="user_utc"
		       labelclass="control-label"/>

		<field name="version" type="text" class="readonly"
		       label="COM_DPATTACHMENTS_FIELD_VERSION_LABEL" size="6"
		       description="COM_DPATTACHMENTS_FIELD_VERSION_DESC" readonly="true"
		       filter="unset" labelclass="control-label"/>

		<field name="ordering" type="text" label="JFIELD_ORDERING_LABEL"
		       description="JFIELD_ORDERING_DESC" class="inputbox" size="6" default="0"
		       labelclass="control-label"/>

		<field name="metakey" type="textarea" label="JFIELD_META_KEYWORDS_LABEL"
		       description="JFIELD_META_KEYWORDS_DESC" class="inputbox" rows="3"
		       cols="30" labelclass="control-label"/>

		<field name="metadesc" type="textarea" label="JFIELD_META_DESCRIPTION_LABEL"
		       description="JFIELD_META_DESCRIPTION_DESC" class="inputbox" rows="3"
		       cols="30" labelclass="control-label"/>

		<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL"
		       description="JFIELD_ACCESS_DESC" size="1"/>

		<field name="hits" type="text" label="COM_DPATTACHMENTS_FIELD_HITS_LABEL"
		       description="COM_DPATTACHMENTS_FIELD_HITS_DESC" class="readonly"
		       size="6" readonly="true" filter="unset"/>

		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL"
		       description="COM_DPATTACHMENTS_FIELD_LANGUAGE_DESC">
			<option value="*">JALL</option>
		</field>

		<field name="featured" type="list" label="JFEATURED"
		       description="COM_DPATTACHMENTS_FIELD_FEATURED_DESC" default="0">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>
</form>
