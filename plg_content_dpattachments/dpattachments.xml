	<author>Digital Peak</author>
	<creationDate>DP_DEPLOY_DATE</creationDate>
	<copyright>(C) 2013 Digital Peak GmbH</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
