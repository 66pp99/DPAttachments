				<field name="components" type="sql" multiple="true" translate="true"
					query="SELECT extension_id, name FROM `#__extensions` WHERE `type`='component' AND `enabled`=1"
					label="PLG_SYSTEM_DPATTACHMENTS_FIELD_COMPONENTS_LABEL" description="PLG_SYSTEM_DPATTACHMENTS_FIELD_COMPONENTS_DESC"
					key_field="name" value_field="name">
				</field>
				<field name="components_exclude" type="sql" multiple="true" translate="true"
					query="SELECT extension_id, name FROM `#__extensions` WHERE `type`='component' AND `enabled`=1"
					label="PLG_SYSTEM_DPATTACHMENTS_FIELD_COMPONENTS_EXCLUDE_LABEL" description="PLG_SYSTEM_DPATTACHMENTS_FIELD_COMPONENTS_EXCLUDE_DESC"
					key_field="name" value_field="name">
				</field>
			</fieldset>
